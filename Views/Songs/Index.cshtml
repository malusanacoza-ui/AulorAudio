@using AulorAudio.Models
@model IEnumerable<Song>

<a asp-controller="Home"
   asp-action="Index"
   class="btn btn-outline-light mb-4">
    ⬅ Back to Home
</a>

<h2 class="mb-4">🎧 Music Library</h2>

<div class="row">
    @foreach (var song in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4">

                <!-- FIXED COVER IMAGE -->
                <img src="/images/mabhoso.jpg"
                     class="card-img-top"
                     alt="Song Cover" />

                <div class="card-body">
                    <h5>@song.Title</h5>
                    <p class="text-muted">@song.Artist</p>

                    <audio controls>
                        <source src="@song.FilePath" type="audio/mpeg" />
                    </audio>

                    <span class="song-duration">⏱ Loading...</span>

                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-success w-100 mt-2"
                           asp-action="Download"
                           asp-route-file="@System.IO.Path.GetFileName(song.FilePath)">
                            ⬇ Download
                        </a>
                    }
                    else
                    {
                        <a asp-area="Identity"
                           asp-page="/Account/Login"
                           class="btn btn-outline-light w-100 mt-2">
                            🔒 Login to Download
                        </a>
                    }
                    <a asp-controller="SongActions"
                       asp-action="Like"
                       asp-route-file="@System.IO.Path.GetFileName(song.FilePath)"
                       class="btn btn-outline-danger mt-2">
                        ❤️ Like
                    </a>

                    <a asp-controller="SongActions"
                       asp-action="Favorite"
                       asp-route-file="@System.IO.Path.GetFileName(song.FilePath)"
                       class="btn btn-outline-warning mt-2">
                        ⭐ Favorite
                    </a>



                </div>

            </div>
        </div>
    }
</div>
