@model IEnumerable<Song>

<h2>🎧 AulorAudio Music Library</h2>

<div class="row">
    @foreach (var song in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow">

                @if (!string.IsNullOrEmpty(song.CoverImage))
                {
                    <img src="@song.CoverImage" class="card-img-top" style="height:250px; object-fit:cover;" />
                }

                <div class="card-body">
                    <h5>@song.Title</h5>
                    <p>@song.Artist</p>

                    <audio controls style="width:100%">
                        <source src="@song.FilePath" type="audio/mpeg" />
                    </audio>

                    <a class="btn btn-success w-100 mt-2" href="@song.FilePath" download>
                        ⬇ Download
                    </a>
                </div>

            </div>
        </div>
    }
</div>

<a asp-action="Create" class="btn btn-primary mt-3">Upload New Song</a>
