@using AulorAudio.Models
@model IEnumerable<Song>

<h2>🎧 AulorAudio Music Library</h2>

<div class="row">
    @foreach (var song in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow">

                <img src="@song.CoverImage"
                     class="card-img-top"
                     style="height:250px; object-fit:cover;" />

                <div class="card-body">
                    <h5>@song.Title</h5>
                    <p>@song.Artist</p>

                    <audio controls style="width:100%">
                        <source src="@song.FilePath" type="audio/mpeg" />
                    </audio>

                    <a class="btn btn-success w-100 mt-2"
                       asp-action="Download"
                       asp-route-file="@System.IO.Path.GetFileName(song.FilePath)">
                        ⬇ Download
                    </a>
                </div>

            </div>
        </div>
    }
</div>