@model IEnumerable<string>

<h2>⭐ My Favorite Songs</h2>
<a asp-controller="Home"
   asp-action="Index"
   class="btn btn-outline-light mb-4">
    ⬅ Back to Home
</a>

@foreach (var file in Model)
{
    <div class="card mb-3 p-3">
        <h5>@System.IO.Path.GetFileNameWithoutExtension(file)</h5>

        <audio controls style="width:100%">
            <source src="/music/@file" type="audio/mpeg" />
        </audio>

        <a class="btn btn-success mt-2" href="/Songs/Download?file=@file">
            ⬇ Download
        </a>
    </div>
}
