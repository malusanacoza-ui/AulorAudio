@model AulorAudio.Models.Song
@{
    Layout = "_Layout";
}

<h2>Add New Song</h2>

<form asp-controller="Admin"
      asp-action="AddSong"
      method="post"
      enctype="multipart/form-data">

    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Song Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Artist</label>
        <input asp-for="Artist" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Song File</label>
        <input type="file" name="songFile" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Cover Image</label>
        <input type="file" name="coverImage" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">
        Add Song
    </button>
</form>
