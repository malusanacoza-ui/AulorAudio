@{
    ViewData["Title"] = "Home";
}

<div class="text-center mt-5">
    <h1 class="display-4">
        🎵 Welcome to <strong>AulorAudio</strong>
    </h1>

    <p class="lead mt-3">
        Stream, favourite, and download your favourite music anytime.
    </p>

    <div class="mt-4">
        <a class="btn btn-primary btn-lg m-2"
           asp-controller="Songs"
           asp-action="Index">
            🎧 Browse Music
        </a>

        @if (!User.Identity.IsAuthenticated)
        {
            <a class="btn btn-outline-secondary btn-lg m-2"
               asp-area="Identity"
               asp-page="/Account/Login">
                🔐 Login to Download
            </a>
        }
    </div>
</div>

